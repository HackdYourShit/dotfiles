[user]
	name = Vinicius Souza
	email = vinicius.souza@luizalabs.com
[color]
    diff = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added     = cyan bold
	branch    = cyan bold
	changed   = magenta bold
	deleted   = red bold
	untracked = yellow bold
[push]
	default = simple
[merge]
    log = true
    ff = false
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[alias]
[alias]
    changeremotehost = !sh -c \"git remote -v | grep '$1.*fetch' | sed s/..fetch.// | sed s/$1/$2/ | xargs git remote set-url\"
    setpromail = "config user.email 'arnaud.rinquin@wopata.com'"
    gopro = !sh -c \"git changeremotehost github.com github_pro && git changeremotehost bitbucket.com bitbucket_pro && git setpromail\"
	addremove = !git r && git add . --all
	all = add . --all
    st = status
    ga = git add -A
    gl = git log
	gs = git status
	gp = git push
	gpu = git pull
	brname = git branch
	brdel = git branch -D
	ci = commit
	co = checkout
	br = branch -av
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
